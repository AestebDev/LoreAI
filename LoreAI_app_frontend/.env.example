# LoreAI Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# OpenAI Configuration (for AI Assistant & Embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Alternative: Anthropic (if using Claude instead of OpenAI)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Optional: Additional AI Provider Keys
# COHERE_API_KEY=your_cohere_api_key_here
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Development Settings
NODE_ENV=development

# RAG Configuration (optional customization)
EMBEDDING_MODEL=text-embedding-ada-002
CHAT_MODEL=gpt-4
MAX_TOKENS=2000
TEMPERATURE=0.7

# Vector Database Settings
VECTOR_SIMILARITY_THRESHOLD=0.7
MAX_RETRIEVED_CHUNKS=5
CHUNK_SIZE=500
CHUNK_OVERLAP=50
